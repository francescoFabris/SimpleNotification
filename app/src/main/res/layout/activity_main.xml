<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:weightSum="100.0">


    <EditText
        android:id="@+id/note_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="@string/insert_note"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.104"/>


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="52dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="158dp"
        android:text="@string/date"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTime"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:layout_marginBottom="219dp"
        android:layout_marginStart="24dp"
        android:text="@string/time"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:id="@+id/set_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="107dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/set_notify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="183dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="158dp"
        android:text="@string/input_date"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewDate"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.697"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hour_text"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/hour_text"
        android:layout_width="182dp"
        android:layout_height="36dp"
        android:layout_marginBottom="217dp"
        android:layout_marginRight="8dp"
        android:text="@string/input_time"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.66"/>

</android.support.constraint.ConstraintLayout>